!!! Strict
%html
  %head
    %meta(charset="utf-8")
    %title
      = "#{yield_content(:page_title)} - Higher Order Heroku"
    = stylesheet_link_tag "application", :media => "all"

    %link{rel:"alternate", type: "application/atom+xml", title: "Higher Order Heroku article feed", href: "/articles.atom"}
    %meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")

    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    
    = javascript_include_tag "application"
    = partial 'ga'

  %body
    .wrapper
      %header
        %h1
          %a(href="/")
            %img.logo(height="91" width="73" src="#{image_path('heroku.png')}")
            Higher Order Heroku
        %p Developing on Heroku
        #heroku-weekly
          = partial 'heroku_weekly'

      %section
        = yield

      %footer
        = partial 'footer'